package GroupProject;
import java.util.Scanner;

public class projectApp {

public void playGame() {

			
		Scanner kbdIN = new Scanner( System.in );
				
		
		while( true ) {
			
			System.out.println( "Decide how your fight will go down!");
			System.out.println( "Options" );
			System.out.println();
			System.out.println( " 1.               Fight alone!" );
			System.out.println( " 2.   Fight in a group of two!" );
			System.out.println( " 3. Fight in a group of three!" );
			System.out.println( " 4.                      Flee!" );
			System.out.println();
			System.out.println( "Choose an option: ");
			int option = kbdIN.nextInt();
			
			switch( option ) {
			case 1:
				System.out.println( "You have chosen to fight alone.");
				System.out.println();
				System.out.println( "Choose your style: ");
				System.out.println();
				System.out.println( " 1.   User Input!" );
				System.out.println( " 2.   Random!" );
				System.out.println();
				int style = kbdIN.nextInt();
				switch ( style ) {
					case 1: //pick your own weapon
						System.out.println("You have chosen to input your own values");
						System.out.println();
						System.out.println( "Choose your weapon: ");
						int weapon = kbdIN.nextInt(); // pulls files from friends weapons for you to pick
						break;
					default: 
						//computer picks random weapon and random foe to fight
						break;
					
					}
					
					break;
			case 2:
				System.out.println( "You have chosen to fight in a group of two" );
				System.out.println( "Now choose how your team will be assembled" );
				System.out.println();
				System.out.println( "1. by choice" );
				System.out.println( "2. by random" );
				int choice = kbdIN.nextInt();
//				int random = kbdIN.nextInt();
				switch ( choice ) {
					case 1:
						System.out.println( "Choose one friend to fight with" ); 
						for( int i = 0; i<2; i++) {
//							pulls from friends class, then weapons class after it
							i++;
						}
						break;
					case 2:
						System.out.println("You have chosen a random friend");
						System.out.println();
						// pulls one random friend and two foes to fight
						break;
				
				}
						
			case 3:
				System.out.println( "You have chosen to fight in a group of three" );
				System.out.println( "Now choose how your team will be assembled");
				System.out.println();
				System.out.println( "1. by choice" );
				System.out.println( "2. by random" );
				int choice2 = kbdIN.nextInt();
				
				switch( choice2 ) {
				case 1:
					System.out.println("Choose two friends to fight with"); // will show friends from the text files to choose from
					break;
				case 2:
					System.out.println("You have chosen two random friends");
					System.out.println();
					// pulls two random friends and three foes to fight
					return;
				}
			default: {
				System.out.println("Don't be a b**** stay and fight!");
				System.out.println();
				break;
			}

			}
		
		}

	}

		
	
	

	
}
