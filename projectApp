package test;

//Imput from Ben

import java.util.Scanner;

public class app {

	public static void main(String[] args) {
			
		
		Scanner kbdIN = new Scanner( System.in );
				
		
		while( true ) {
			
			System.out.println( "Options" );
			System.out.println();
			System.out.println( " 1. Test randomly creating a friend ");
			System.out.println( " 2. Test reading a troupe from a file ");
			System.out.println( " 3. End program ");
			System.out.println();
			System.out.println( "Choose an option: ");
			
			int option = kbdIN.nextInt();
			System.out.println( "Choose Weapon");
			int weapon = kbdIN.nextInt();
			
			
			
			switch( option ) {
			case 1:
				TestRandomFriend();
				System.out.println( "Your weapon will be a: ");
				switch ( weapon ) {
					case 1: 
						System.out.println( "Sword");
						break;
					case 2: 
						System.out.println( "Knife");
						break;
					case 3:
						System.out.println( "Baseball Bat");
						break;
					}
					
					break;
			case 2:
				System.out.println( "Larry will be fighting with you now" );
				System.out.println( "Your weapon will be a: ");
				switch ( weapon ) {
				case 1: 
					System.out.println( "Sword");
					break;
				case 2: 
					System.out.println( "Knife");
					break;
				case 3:
					System.out.println( "Baseball Bat");
					break;
				}
					break;
			case 3:
				System.out.println( "Brad will be fighting with you now"  );
					return;
			}
		
		}

	}

	
	private static void TestRandomFriend() {
		System.out.println( "James will be fighting with you" );
	
	}

	
}


